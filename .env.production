## 로컬용 값이며 민감한 정보는 포함되어 있지 않습니다.
# values for only local, no critical data

NODE_ENV=production
BUILD_TARGET=production

# Database
DATABASE_URL=mysql://app_user:app_password@127.0.0.1:3309/sns_feed_db
DB_ROOT_PASSWORD=password
DB_PASSWORD=app_password
DB_USER=app_user
DB_NAME=sns_feed_db
DB_PORT=3309

# Application
APP_PORT=5656

# Hot reload (disabled in production)
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false

# JWT
JWT_SECRET=production-jwt-secret-key-please-change-this
JWT_ACCESS_EXPIRES_IN=30m
JWT_REFRESH_EXPIRES_IN=7d